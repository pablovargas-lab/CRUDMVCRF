@using CRUDMVCRF.Models.ViewModel
@model PeopleViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<form>
    <div class="row">
        @Html.HiddenFor(d=>d.Id, new {id="Id"})

        <div class="form-group">
            @Html.LabelFor(d => d.Name)
            @Html.TextBoxFor(d => d.Name, new { id = "Name" })

        </div>
        <div class="form-group">
            @Html.LabelFor(d => d.Age)
            @Html.TextBoxFor(d => d.Age, new { id = "Age" })

        </div>
        <input value="guardar" type="button" onclick="jsEdit()" />

    </div>
</form>


<script>
    var url = "@Url.Content("~/People/Update")";
    function jsEdit() {
        fetch(url, {
            method: "POST",
            body: JSON.stringify({
                Name: document.getElementById("Name").value,
                Age: document.getElementById("Age").value,
                Id: document.getElementById("Id").value
            }),
            headers: {
                'Accept': "application/json",
                "Content-Type": "application/json"

            }
        }).then(function (response){

            if (response.ok)
                return response.text()
            else
                alert("error al ejecutar")
        }).then(function (Data){
            if (Data != "1") {
                alert(Data)
            } else {
                document.location.href = "@Url.Content("~/People/")";
            }

        })


    }


</script>